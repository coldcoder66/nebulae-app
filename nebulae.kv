<MainLayout>:
    orientation: "vertical"
    padding: root.width * 0.05, root.height * 0.05
    spacing: root.height * 0.03

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "assets/bg.png"   # your background image

    Label:
        text: "nebulae"
        font_name: "assets/myfont.ttf"
        font_size: root.height * 0.06
        color: 1, 1, 1, 1

    Label:
        text: "ai assistant"
        font_name: "assets/myfont.ttf"
        font_size: root.height * 0.04
        color: 1, 1, 1, 1

    Label:
        text: "project library"
        font_name: "assets/myfont.ttf"
        font_size: root.height * 0.035
        color: 1, 1, 1, 1

    Button:
        text: "> videos"
        font_name: "assets/myfont.ttf"
        size_hint_y: None
        height: root.height * 0.08
        background_color: 0, 0, 0, 0.4
        color: 1, 1, 1, 1

    Button:
        text: "> visual graphics"
        font_name: "assets/myfont.ttf"
        size_hint_y: None
        height: root.height * 0.08
        background_color: 0, 0, 0, 0.4
        color: 1, 1, 1, 1
