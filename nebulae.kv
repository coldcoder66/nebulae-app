<LibraryScreen>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bg.png'

    ScrollView:
        size_hint: 1, 1
        bar_width: 12
        scroll_type: ['bars', 'content']
        do_scroll_x: False
        do_scroll_y: True
        effect_cls: 'ScrollEffect'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0  # transparent, just for stacking
        # You can add content here if needed, e.g.:
        # BoxLayout:
        #     size_hint_y: None
        #     height: self.minimum_height
        #     # ...
    MDRaisedButton:
        text: "Back"
        pos_hint: {"x": 0.02, "y": 0.92}
        size_hint: None, None
        size: 120, 48
        md_bg_color: 0.117647, 0.239215, 0.345098, 1
        text_color: 1, 1, 1, 1
        on_release: app.change_screen('main')

